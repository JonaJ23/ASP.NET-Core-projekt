@page
@model RazorPage_uppgift.Pages.Events.IndexModel

@{
    ViewData["Title"] = "Index";
}
@using Microsoft.AspNetCore.Identity
@using RazorPage_uppgift.Models

@inject SignInManager<MyUser> SignInManager
@inject UserManager<MyUser> UserManager

<h1>Index</h1>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Event[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Event[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Event[0].Place)
            </th>
            <th>
                Organizer
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Event[0].Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Event[0].SpotsAvailable)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Event)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Place)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Organizer.FirstName)
                </td>
                <td>
                    @item.Date.ToShortDateString()
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SpotsAvailable)
                </td>
                <td>
                    <a asp-page="./Details" asp-route-id="@item.EventID" class="btn btn-primary btn-block">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
@if (User.IsInRole("Organizer"))
{
    <div class="text-center">
        <a asp-page="./Create" class="btn btn-dark">Add Event</a>
    </div>
}